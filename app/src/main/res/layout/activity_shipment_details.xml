<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.ShipmentDetailsActivity">

    <include
        android:id="@+id/shipmentDetails"
        layout="@layout/header_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shipmentDetails">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_5sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvGeneral"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/shape_button_current"
                android:backgroundTint="@color/default_blue"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:text="General Details"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvComment"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/shape_button_current"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Comments"
                android:textColor="@color/default_blue"
                android:textSize="@dimen/_12sdp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDigitalCopies"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/shape_button_current"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Digital Copies"
                android:textColor="@color/default_blue"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/shipment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


</androidx.constraintlayout.widget.ConstraintLayout>