<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shipment.ShipmentFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCurrent"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_button_current"
        android:backgroundTint="#00006A"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Current"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCompleted"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_button_current"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Completed"
        android:textColor="#00006A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCurrent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItemView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrent"
        tools:itemCount="8"
        tools:listitem="@layout/item_view" />

</androidx.constraintlayout.widget.ConstraintLayout>